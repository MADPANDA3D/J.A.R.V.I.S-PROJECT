# JARVIS Chat Production Environment Configuration
# WARNING: Never commit this file with real secrets to version control!
# Copy this to .env.production and fill in your actual values

# Application Settings
NODE_ENV=production
VITE_APP_ENV=production
VITE_APP_VERSION=1.0.0
VITE_APP_DOMAIN=jarvis.madpanda3d.com

# Required - Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# AI Integration - N8N
VITE_N8N_WEBHOOK_URL=https://n8n.madpanda3d.com/webhook/your-webhook-id
N8N_API_KEY=your-n8n-api-key-here
N8N_WEBHOOK_SECRET=your-webhook-secret-32-chars

# Security Secrets (Generate with: openssl rand -hex 32 or openssl rand -base64 32)
JWT_SECRET=your-jwt-secret-minimum-32-characters
ENCRYPTION_KEY=your-encryption-key-32-characters
WEBHOOK_SECRET=your-webhook-secret-32-characters

# WebSocket Configuration  
VITE_WEBHOOK_WEBSOCKET_URL=ws://your-vps-ip:9001

# CDN and External Services
VITE_CDN_URL=

# Monitoring & Logging (Optional)
VITE_SENTRY_DSN=your-sentry-dsn-optional
DATADOG_API_KEY=your-datadog-key-optional
LOG_LEVEL=error
ENABLE_ANALYTICS=true

# Performance Settings
ENABLE_CACHING=true
CACHE_TTL=7200
COMPRESSION_ENABLED=true
RATE_LIMIT_WINDOW=900
RATE_LIMIT_MAX_REQUESTS=2000
CSP_ENABLED=true

# Feature Flags (Production - Keep disabled)
ENABLE_DEBUG_TOOLS=false
ENABLE_EXPERIMENTAL_FEATURES=false
MOCK_N8N_RESPONSES=false
BYPASS_AUTH=false

# Webhook Configuration
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_CIRCUIT_BREAKER_THRESHOLD=5
WEBHOOK_MONITORING_ENABLED=true