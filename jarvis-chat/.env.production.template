# JARVIS Chat Production Environment Configuration
# WARNING: Never commit this file with real secrets to version control!
# Copy this to .env.production and fill in your actual values

# Application Settings
NODE_ENV=production
VITE_APP_ENV=production
VITE_APP_VERSION=latest
VITE_APP_DOMAIN=your-domain.com

# Database & Authentication (Supabase)
VITE_SUPABASE_URL=https://your-project.supabase.co
# SENSITIVE: Supabase anon key - safe for client-side use
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
# CRITICAL: This service role key has admin privileges - use on server only!
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# External Integrations
VITE_N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/your-id
# SECRET: Webhook secret for secure n8n communication
N8N_WEBHOOK_SECRET=your-n8n-webhook-secret
N8N_API_KEY=your-n8n-api-key

# Security Secrets (Generate new ones for production)
# CRITICAL: JWT secret must be strong and unique for production
JWT_SECRET=your-jwt-secret-minimum-32-characters
# SENSITIVE: Encryption key for data protection
ENCRYPTION_KEY=your-encryption-key-32-characters

# Monitoring & Logging (Optional)
VITE_SENTRY_DSN=your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key
LOG_LEVEL=error
ENABLE_ANALYTICS=true

# Performance Settings
ENABLE_CACHING=true
CACHE_TTL=7200
COMPRESSION_ENABLED=true
# Rate limiting window in seconds (15 minutes for production)
RATE_LIMIT_WINDOW=900
RATE_LIMIT_MAX_REQUESTS=2000
CSP_ENABLED=true

# Feature Flags (Production - Keep disabled)
ENABLE_DEBUG_TOOLS=false
ENABLE_EXPERIMENTAL_FEATURES=false
MOCK_N8N_RESPONSES=false
BYPASS_AUTH=false

# Webhook Configuration
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_CIRCUIT_BREAKER_THRESHOLD=5
WEBHOOK_MONITORING_ENABLED=true